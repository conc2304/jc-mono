# Build the docker image with `npx nx docker-build cms-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t cms-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cms-api && \
          adduser --system -G cms-api cms-api

COPY apps/cms-api/dist cms-api/
RUN chown -R cms-api:cms-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cms-api --omit=dev -f install

CMD [ "node", "cms-api" ]
